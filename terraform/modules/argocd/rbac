add local user: 

edit argocd-cm and add in data section:

accounts.testuser01: apiKey,login
accounts.produser01: apiKey,login
update password for user testuser01
argocd account update-password --account testuser01 --new-password matt01234A --current-password admin-p@ssw0rd
argocd account update-password --account produser01 --new-password 1234 --current-password admin-p@ssw0rd

create roles for users
edit argocd-rbac-cm
add in data section:
policy.default: role:readonly
policy.csv: |
  p, role:test-role, applications, create, app-go-test/*, allow
  p, role:test-role, projects, get, app-go-test, allow
  p, role:prod-role, applications, create, *, allow
  p, role:prod-role, projects, get, *, allow
  g, produser01, role:prod-role
